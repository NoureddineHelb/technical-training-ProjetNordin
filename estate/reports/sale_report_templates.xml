<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
            <!-- Ajout des champs de date de formation et d'employé affecté à la formation dans le rapport de devis -->
            <t t-foreach="docs" t-as="o">
                <!-- ... -->
                <t t-foreach="o.order_line" t-as="l">
                    <!-- ... -->
                    <td><span t-field="l.training_date"/></td>
                    <td><span t-field="l.employee_id.name"/></td>
                    <!-- ... -->
                </t>
                <!-- ... -->
            </t>
        </template>

        <template id="approved_sales_orders_report_template" inherit_id="sale.report_saleorder_document">
            <xpath expr="//table[@class='table table-condensed']" position="before">
                <h2>Approved Sales Orders</h2>
            </xpath>
            <xpath expr="//table[@class='table table-condensed']" position="attributes">
                <attribute name="t-if">order.approval_state == 'approved'</attribute>
            </xpath>
        </template>

        <template id="rejected_sales_orders_report_template" inherit_id="sale.report_saleorder_document">
            <xpath expr="//table[@class='table table-condensed']" position="before">
                <h2>Rejected Sales Orders</h2>
            </xpath>
            <xpath expr="//table[@class='table table-condensed']" position="attributes">
                <attribute name="t-if">order.approval_state == 'rejected'</attribute>
            </xpath>
        </template>
    </data>
</odoo>
